# Makefile for 3270/3287 emulation common library

LIB32XX = ../lib32xx.a

RM = rm -f
CC = gcc
AR = ar

all: $(LIB32XX)

OBJ = o
include lib32xx_files.mk
SRCS = $(LIB32XX_SOURCES)
OBJS = $(LIB32XX_OBJECTS)

LIBDIR = ${exec_prefix}/lib
prefix = /usr/local
exec_prefix = ${prefix}
sysconfdir = ${prefix}/etc
datarootdir = ${prefix}/share
LIBX3270DIR = ${sysconfdir}/x3270

CCOPTIONS = -Wall -Wsign-compare -std=c99 -pedantic -Wno-variadic-macros
XCPPFLAGS = -I. -I../include/unix -I../../include -DLIBX3270DIR=\"$(LIBX3270DIR)\" -D_POSIX_SOURCE -D_BSD_SOURCE -D_DEFAULT_SOURCE -D_XOPEN_SOURCE 
CFLAGS = $(CCOPTIONS) $(CDEBUGFLAGS) $(XCPPFLAGS)
LDFLAGS = 
LIBS = -lssl -lcrypto -lutil 

$(LIB32XX): $(OBJS)
	$(AR) cr $@ $(OBJS)
	ranlib $@

clean:
	$(RM) *.o

clobber: clean
	$(RM) $(LIB32XX)
depend:
	: -- $(CFLAGS) -- -s "# DO NOT DELETE" $(SRCS)

# -------------------------------------------------------------------------
# dependencies generated by makedepend

# DO NOT DELETE
